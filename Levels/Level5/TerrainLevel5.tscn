	distortion -= 0.5;
	COLOR = texture(TEXTURE, UV);
	COLOR.rgb = mix (vec4(distortion * intensity).rgb, water_color.rgb, water_color.a);
	}
	else{
        COLOR = curr_color;
    }
}
